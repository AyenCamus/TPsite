<%= form_for [@user, @medium] do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% @medium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id, :value => @user.id %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Medium:" %>
    <%= f.select :type, options_for_select(Medium.subclasses.map(&:name)) %>
  </div>

  <div class="actions">
    <%= f.submit "Add Apperance" %>
  </div>
<% end %>
